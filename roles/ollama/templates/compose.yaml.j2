{{ ansible_managed | ansible.builtin.comment }}
---
services:
  ollama:
    image: {{ ollama_docker_image }}
    container_name: ollama
    restart: unless-stopped
    logging:
      driver: json-file
      options:
        max-size: "100m"
        max-file: "10"
    networks:
      - ollama
    volumes:
      - {{ ollama_docker_path }}/data:/root/.ollama:rw
      - /etc/localtime:/etc/localtime:ro

networks:
  ollama:
    name: internal-ollama-network
